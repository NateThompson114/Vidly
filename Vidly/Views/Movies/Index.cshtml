@using System.Activities.Statements
@model IEnumerable<Vidly.Models.Movies>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@{
    if (Model.Any())
    {
        <table class="table table-bordered">
            <tr>
                <th>Movie</th>
                <th>ID</th>
            </tr>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>@movies.Name</td>
                    <td>@movies.Id</td>
                </tr>
            }
        </table>
    }
}