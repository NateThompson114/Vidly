@model Vidly.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dateReleased = $"{Model.DateReleased:dddd, MMMM d, yyyy}";
    var dateAdded = $"{Model.DateAdded:dddd, MMMM d, yyyy}";
}

<h2>@Model.Name</h2>

<table class="table table-bordered">
    <tr>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Date Added</th>
        <th>Current Stock</th>
    </tr>
    <tr>
        <td>@Model.Genre.Name</td>
        <td>@dateReleased</td>
        <td>@dateAdded</td>
        <td>@Model.Quantity</td>
    </tr>
</table>